<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cd.clothes.dao.UserDAO">
    <select id="findByLoginnameAndLoginpass" parameterType="User" resultType="User">
        select * from users where loginName=#{loginName} and password=#{password}
    </select>

    <select id="findByUidAndPassword" parameterType="boolean" resultType="java.lang.Boolean">
        select count(*) from users where uid=#{uid} and password=#{password}
    </select>

    <select id="findUserByUid" parameterType="User" resultType="User">
        select * from users where uid=#{uid}
    </select>

    <!-- 修改用户(Update) -->
    <update id="updatePassword" >
        update users set password=#{password} where uid=#{uid}
    </update>
</mapper>